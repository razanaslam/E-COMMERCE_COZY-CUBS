<script>
  function validateAddressForm(form, errorMessageDiv) {
    errorMessageDiv.textContent = '';

    const fullName = form.fullName.value.trim();
    const city = form.city.value.trim();
    const state = form.state.value.trim();
    const postalCode = form.postalCode.value.trim();
    const country = form.country.value.trim();
    const mobileNumber = form.number.value.trim();
    const email = form.email.value.trim();

    const namePattern = /^[a-zA-Z\s]+$/;
    if (!fullName) {
      errorMessageDiv.textContent += 'Full Name is required. ';
    } else if (!namePattern.test(fullName)) {
      errorMessageDiv.textContent += 'Full Name must contain only letters and spaces. ';
    }

    const cityPattern = /^[a-zA-Z\s]+$/;
    if (!city) {
      errorMessageDiv.textContent += 'City is required. ';
    } else if (!cityPattern.test(city)) {
      errorMessageDiv.textContent += 'City must contain only letters and spaces. ';
    }

    const statePattern = /^[a-zA-Z\s]+$/;
    if (!state) {
      errorMessageDiv.textContent += 'State/Province/Region is required. ';
    } else if (!statePattern.test(state)) {
      errorMessageDiv.textContent += 'State must contain only letters and spaces. ';
    }

    const postalPattern = /^[0-9]{6}$/;
    if (!postalCode) {
      errorMessageDiv.textContent += 'Postal Code is required. ';
    } else if (!postalPattern.test(postalCode)) {
      errorMessageDiv.textContent += 'Postal Code must be exactly 6 digits. ';
    }

    const countryPattern = /^[a-zA-Z\s]+$/;
    if (!country) {
      errorMessageDiv.textContent += 'Country is required. ';
    } else if (!countryPattern.test(country)) {
      errorMessageDiv.textContent += 'Country must contain only letters and spaces. ';
    }

    const mobilePattern = /^[0-9]{10}$/;
    if (!mobileNumber) {
      errorMessageDiv.textContent += 'Mobile Number is required. ';
    } else if (!mobilePattern.test(mobileNumber)) {
      errorMessageDiv.textContent += 'Mobile Number must be exactly 10 digits and contain only numbers. ';
    }

    if (email && !/^[\w-]+(\.[\w-]+)*@([\w-]+\.)+[a-zA-Z]{2,7}$/.test(email)) {
      errorMessageDiv.textContent += 'Please enter a valid Email Address. ';
    }

    if (errorMessageDiv.textContent) {
      return false;
    }

    return true;
  }

  document.getElementById('addAddressForm').addEventListener('submit', function (event) {
    event.preventDefault();
    const errorMessageDiv = document.getElementById('add-error-message');
    const isValid = validateAddressForm(this, errorMessageDiv);

    if (isValid) {
      Swal.fire({
        icon: 'success',
        title: 'Address Updated Successfully!',
        toast: true,
        position: 'top-end',
        timer: 3000,
        showConfirmButton: false
      });
      this.submit();
    }
  });

  document.getElementById('editaddressForm').addEventListener('submit', function (event) {
    event.preventDefault();
    const errorMessageDiv = document.getElementById('error-message');
    const isValid = validateAddressForm(this, errorMessageDiv);

    if (isValid) {
      this.submit();
    }
  });
</script>


