    <h1>My Orders</h1>
    <div class="card" style="    width: 1043px;
    margin-left: 100px;">
      <div class="card-header" style="background-color: #fffff8;">
        <h5 class="mb-0 text-center text-md-start">Your Orders</h5>
      </div>
      <div class="card-body" style="background-color: #fffff8;">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4 mt-4 order-info-wrap">
          <div class="col">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="text-primary material-icons md-person"></i>
              </span>
              <div class="text">
                <h6 class="mb-1">Customer</h6>
                <p class="mb-1">
                  <b><%= orders.billingDetails.fullName %></b><br />
                  <%= orders.billingDetails.email %><br />
                  <%= orders.billingDetails.number %>
                </p>
              </div>
            </article>
          </div>
          <div class="col">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="text-primary material-icons md-local_shipping"></i>
              </span>
              <div class="text">
                <h6 class="mb-1">Order Info</h6>
                <p class="mb-1">
                  Shipping: Falcon Saga<br />
                  Pay Method: <%= orders.paymentMethod %><br />
                  Payment Status: <%= orders.paymentStatus %>
                </p>
                <% if (orders.paymentStatus === "Failed") { %>
                <a href="#" class="text-danger">Retry Payment</a>
                <% } %>
              </div>
            </article>
          </div>
          <div class="col">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="text-primary material-icons md-place"></i>
              </span>
              <div class="text">
                <h6 class="mb-1">Deliver to</h6>
                <p class="mb-1">
                  City: <%= orders.billingDetails.city %>, <%= orders.billingDetails.state %>
                  <%= orders.billingDetails.country %><br />
                  Po Box: <%= orders.billingDetails.postalCode %>
                </p>
              </div>
            </article>
          </div>
        </div>
    
        <div class="table-responsive mt-4">
          <table class="table table-bordered">
            <tbody>
              <% orders.items.forEach(item => { %>
              <tr style="background-color: white;">
                <td>
                  <div class="d-flex align-items-center">
                    <% if (item.product && item.product.image_url && item.product.image_url.length > 0) { %>
                    <img
                      src="/uploads/<%= item.product.image_url[0] %>"
                      width="40"
                      height="40"
                      class="img-fluid img-xs me-2"
                      alt="Item"
                    />
                    <% } else { %>
                    <img
                      src="/uploads/default-image.jpg"
                      width="40"
                      height="40"
                      class="img-fluid img-xs me-2"
                      alt="No Image"
                    />
                    <% } %>
                    <div>
                      <b><%= item.product ? item.product.product_title : 'Unknown Product' %></b><br />
                      <small>Size: XXL</small>
                    </div>
                  </div>
                </td>
                <td><%= item.price.toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td>
                  <%= (item.price * item.quantity).toFixed(2) %>
                </td>
              </tr>
              <% }) %>
            </tbody>
            <tr class="table-light">
              <td colspan="4">
                <div class="float-end text-center text-md-end">
                  <dl class="row">
                    <dt class="col-sm-4">Subtotal:</dt>
                    <dd class="col-sm-8">
                      <%= orders.totalPrice.toFixed(2) %>
                    </dd>
    
                    <dt class="col-sm-4">Discount:</dt>
                    <dd class="col-sm-8">
                      <%= orders.discount || 0 %>
                    </dd>
    
                    <dt class="col-sm-4">Shipping Cost:</dt>
                    <dd class="col-sm-8">Free Shipping</dd>
    
                    <dt class="col-sm-4">Grand Total:</dt>
                    <dd class="col-sm-8 h5">
                      <b><%= orders.totalPrice.toFixed(2) %></b>
                    </dd>
    
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                      <span
                        class="badge rounded-pill alert-<%= orders.status === 'Returned' ? 'primary' : 'success' %> text-<%= orders.status === 'Returned' ? 'primary' : 'success' %>"
                      >
                        <%= orders.status %>
                      </span>
                    </dd>
    
                    <% if (orders.status === 'Returned') { %>
                    <dt class="col-sm-4">Reason:</dt>
                    <dd class="col-sm-8 text-muted">
                      <%= orders.returnReason %>
                    </dd>
                    <% } %>
                  </dl>
                </div>
              </td>
            </tr>
          </table>
    
          <% if (orders.status === "Delivered" && orders.paymentStatus === "Paid") { %>
          <div class="text-center my-4">
            <a
              href="/downloadinvoice/<%= orders._id %>"
              class="btn btn-primary btn-md"
            >
              Download Invoice
            </a>
          </div>
          <% } %>
        </div>
      </div>
