<script>
  function validation(event) {
    let isValid = true;

    const currentPassword = document
      .getElementById("current-password")
      .value.trim();
    const newPassword = document.getElementById("new-password").value.trim();
    const confirmPassword = document
      .getElementById("confirm-password")
      .value.trim();

    // Clear previous error messages
    const errorElement = document.getElementById("errorPass");
    errorElement.textContent = "";

    // Check if any fields are empty
    if (!currentPassword || !newPassword || !confirmPassword) {
      errorElement.textContent = "All fields are required!";
      isValid = false;
    }

    // Validate new password pattern
    const passwordPattern =
      /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*?&#])[A-Za-z\d@$!%*?&#]{8,}$/;
    if (!passwordPattern.test(newPassword)) {
      errorElement.textContent =
        "Password must be at least 8 characters long, contain at least one letter, one number, and one special character!";
      isValid = false;
    }
    

    // Check if new password matches confirm password
    if (newPassword !== confirmPassword) {
      errorElement.textContent =
        "Confirm password does not match the new password!";
      isValid = false;
    }

    // Prevent form submission if validation fails
    if (!isValid) {
      event.preventDefault();
    } else {
      // SweetAlert Toast message for successful validation
      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        title: 'Password updated successfully!',
        showConfirmButton: false,
        timer: 3000, // The toast will show for 3 seconds
        timerProgressBar: true,
      });
      window.location.href=`/accountDetails`    }

    return isValid;
  }
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('userDetailsForm');
    const saveChangesBtn = document.getElementById('saveChangesBtn');
    const nameInput = document.getElementById("display-name");
    const phoneInput = document.getElementById("phone-number");
    let formChanged = false;

    // Detect changes in the form fields
    form.addEventListener('input', function () {
      formChanged = true;
    });

    form.addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent default submission initially

      // Check if name contains only letters and spaces
      const namePattern = /^[a-zA-Z\s]+$/;
      if (!namePattern.test(nameInput.value)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Input',
          text: 'User name must only contain letters and spaces.',
          confirmButtonText: 'OK'
        });
        return;
      }

      // Check if phone number contains only digits
      const phonePattern = /^\d+$/;
      if (!phonePattern.test(phoneInput.value)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Input',
          text: 'Phone number must contain digits only.',
          confirmButtonText: 'OK'
        });
        return;
      }

      if (formChanged) {
        // SweetAlert Toast notification for changes
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'success',
          title: 'Changes saved successfully!',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
        });

        // Submit the form after a short delay
        setTimeout(() => {
          form.submit();
        }, 1000);
      } else {
        // If no changes, alert the user
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'info',
          title: 'No changes made!',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
        });
      }
    });
  });
</script>


