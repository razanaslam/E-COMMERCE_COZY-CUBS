<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Registration Form</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      /* Add custom styles to make the form responsive on smaller screens */
      @media (max-width: 768px) {
        .wrapper {
          background-image: none; /* Disable background image for smaller screens */
          padding: 20px;
        }

        .inner {
          width: 100%;
          padding: 20px;
        }

        .form-wrapper {
          width: 100%;
        }

        .image-holder img {
          display: none; /* Hide image on smaller screens */
        }
      }
    </style>
  </head>

  <body>
    <div
      class="wrapper"
      style="background-image: url('/images/bg-registration-form-1.jpg')"
    >
      <div class="inner">
        <div class="image-holder">
          <img src="/images/registration-form-1.jpg" alt="Registration" />
        </div>
        <form id="registerForm" method="post" action="/registerUser">
          <h3>Registration Form</h3>

          <div class="form-wrapper">
            <input
              type="text"
              id="name"
              placeholder="Full Name"
              name="name"
              class="form-control"
            />
            <i class="zmdi zmdi-account"></i>
          </div>
          <div class="form-wrapper">
            <input
              type="email"
              id="email"
              placeholder="Email Address"
              name="email"
              class="form-control"
            />
            <i class="zmdi zmdi-email"></i>
          </div>
          <div class="form-wrapper">
            <input
              type="text"
              id="number"
              placeholder="Mobile Number"
              name="number"
              class="form-control"
              pattern="[0-9]{10}"
            />
            <i class="zmdi zmdi-phone"></i>
          </div>
          <div class="form-wrapper">
            <input
              type="password"
              id="password"
              placeholder="Password"
              name="password"
              class="form-control"
              minlength="6"
            />
            <i class="zmdi zmdi-lock"></i>
          </div>
          <div class="form-wrapper">
            <input
              type="password"
              id="confirmPassword"
              placeholder="Confirm Password"
              name="confirmPassword"
              class="form-control"
            />
            <i class="zmdi zmdi-lock"></i>
          </div>

          <div id="error-container" style="color: red"></div>

          <button type="submit">
            Register
            <i class="zmdi zmdi-arrow-right"></i>
          </button>

          <p style="text-align: center; margin-top: 10px">
            Already have an account? <a href="/login">Login Here</a>
          </p>
        </form>
      </div>
    </div>

    <script>
      document
        .getElementById("registerForm")
        .addEventListener("submit", function (event) {
          const password = document.getElementById("password").value;
          const confirmPassword =
            document.getElementById("confirmPassword").value;

          const errorContainer = document.getElementById("error-container");
          errorContainer.textContent = "";

          let errorMessage = "";

          if (password !== confirmPassword) {
            errorMessage = "Passwords do not match.";
          } else if (!password || !confirmPassword) {
            errorMessage = "Please fill out both password fields.";
          }

          if (errorMessage) {
            errorContainer.textContent = errorMessage;
            event.preventDefault();
          }
        });
    </script>
  </body>
</html>
