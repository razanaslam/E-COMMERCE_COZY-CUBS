    <style>

      /* pagination */

      .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  padding: 10px;
  background-color: #f8f9fa;
  border: 1px solid white;
  border-radius: 5px;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.pagination-link {
  color: rgb(0, 0, 0);
  background-color: rgb(255, 255, 255);
  text-decoration: none;
  margin: 0 5px;
  padding: 5px 10px;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 3px;
  transition: all 0.3s ease;
}

.pagination-link:hover {
  background-color: rgb(0, 0, 0);
  color: rgb(255, 255, 255);
}

.pagination-link.active {
  background-color: rgb(0, 0, 0);
  color: rgb(255, 255, 255);
  font-weight: bold;
  pointer-events: none;
}

.pagination-dots {
  color: rgb(0, 0, 0);
  margin: 0 5px;
  font-weight: bold;
}

.page-link {
  margin: 0 5px;
  padding: 10px 15px;
  border: 1px solid #ddd;
  text-decoration: none;
  color: rgb(0, 0, 0);
}

.page-link.active {
  background-color: rgb(0, 0, 0);
  color: white;
  border-color: rgb(0, 0, 0);}

.page-link:hover {
  background-color: #ffffff;
  color: rgb(0, 0, 0);
}

.page-dots {
  margin: 0 5px;
  color: #777;
  font-size: 16px;
}

      /* Styling for the table */
      table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
      }
      table,
      th,
      td {
        border: 1px solid #ddd;
      }
      th,
      td {
        padding: 12px;
        text-align: left;
      }
      th {
        background-color: #f8f9fa;
        font-weight: bold;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      /* Styling for the title */
      h2.content-title {
        font-size: 24px;
        font-weight: bold;
      }
    </style>
