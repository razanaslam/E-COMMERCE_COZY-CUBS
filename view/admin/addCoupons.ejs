<%- include('headers.ejs') %>
<style>
  .error-message {
    color: red;
    font-size: 12px;
    margin-top: 5px;
  }
</style>
  


<main class="main-wrap">
 
  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Coupons</h2>
        <p>Add Coupons</p>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-3" style="width: 2000px">
            <form action="/admin/addCoupons" method="POST" id="couponForm">
              <div class="mb-4">
                <label for="coupon_code" class="form-label">Coupon Code</label>
                <input
                  type="text"
                  name="couponCode"
                  placeholder="Enter coupon code"
                  class="form-control"
                  id="coupon_code"
                  required
                />
                <div class="error-message" id="coupon_code_error"></div>
              </div>

              <div class="mb-4">
                <label for="discount_percentage" class="form-label">Discount Percentage</label>
                <input
                  type="number"
                  name="discountPercentage"
                  placeholder="Discount %"
                  min="0"
                  max="100"
                  class="form-control"
                  id="discount_percentage"
                  required
                />
                <div class="error-message" id="discount_percentage_error"></div>
              </div>

              <div class="mb-4">
                <label for="max_discount_amount" class="form-label">Max Discount Amount</label>
                <input
                  type="number"
                  name="maxDiscountAmount"
                  placeholder="Maximum Discount"
                  min="0"
                  class="form-control"
                  id="max_discount_amount"
                />
                <div class="error-message" id="max_discount_amount_error"></div>
              </div>

              <div class="mb-4">
                <label for="min_purchase_amount" class="form-label">Minimum Purchase Amount</label>
                <input
                  type="number"
                  name="minAmount"
                  placeholder="Minimum Purchase Amount"
                  min="0"
                  class="form-control"
                  id="min_purchase_amount"
                />
                <div class="error-message" id="min_purchase_amount_error"></div>
              </div>

              <div class="mb-4">
                <label for="expiry_date" class="form-label">Expiry Date</label>
                <input
                  type="date"
                  name="expiryDate"
                  class="form-control"
                  id="expiry_date"
                  required
                />
                <div class="error-message" id="expiry_date_error"></div>
              </div>

              <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea
                  placeholder="Enter coupon description"
                  name="description"
                  class="form-control"
                  id="description"
                ></textarea>
                <div class="error-message" id="description_error"></div>
              </div>

              <div class="d-grid">
                <button
                  style="
                    height: 33px;
                    color: white;
                    background: #088178;
                    border: #088178;
                  "
                  type="submit"
                >
                  Add Coupon
                  <i class="zmdi zmdi-arrow-right"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
      <div class="col-sm-6">
        <script>
          document.write(new Date().getFullYear());
        </script>
