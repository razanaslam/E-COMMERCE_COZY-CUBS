<%- include('headers.ejs') %>
<style>


  /* Base styles */
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
  }
  
  .main-wrap {
    padding: 20px;
  }
  
  /* Table styles */
  .table-responsive {
    overflow-x: auto;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #ddd;
  }
  
  table, th, td {
    border: 1px solid #ddd;
  }
  
  th, td {
    padding: 12px;
    text-align: left;
  }
  
  th {
    background-color: #f8f9fa;
    font-weight: bold;
  }
  
  tr:nth-child(even) {
    background-color: #f2f2f2;
  }
  
  /* Header styles */
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }
  
  .content-title {
    font-size: 24px;
    font-weight: bold;
    margin: 0;
  }
  
  /* Button styles */
  .btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
  }
  
  .btn-unlist {
    background-color: #088178;
    color: white;
  }
  
  .btn-list {
    background-color: red;
    color: white;
  }
  
  .btn-edit {
    background-color:transparent;
    color: rgb(0, 0, 0);
  }
  
  .btn-add {
    background-color: #4caf50;
    color: white;
    display: inline-block;
    margin-top: 20px;
  }
  
  /* Responsive styles */
  @media screen and (max-width: 768px) {
    .content-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .content-header > div {
      width: 100%;
      margin-bottom: 10px;
    }
    
    .table-responsive {
      font-size: 14px;
    }
    
    th, td {
      padding: 8px;
    }
    
    .btn {
      padding: 6px 12px;
      font-size: 12px;
    }
  }
  
  @media screen and (max-width: 480px) {
    .table-responsive {
      font-size: 12px;
    }
    
    th, td {
      padding: 6px;
    }
    
    .btn {
      padding: 4px 8px;
      font-size: 11px;
    }
  }
</style>

<main class="main-wrap">
  <header class="main-header navbar" style="background-color: #ffffff;">
    <div class="col-search">
    </div>
    <div class="col-nav">
      <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside">
        <i class="material-icons md-apps"></i>
      </button>
      <a class="btn btn-danger" href="/admin/logout">
        <i class="material-icons md-exit_to_app"></i> Logout
      </a>
    </div>
  </header>
  
  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title">Brand</h2>
        <p>Add, edit or delete</p>
      </div>
      <div>
        <input type="text" placeholder="Search Categories" class="form-control bg-white">
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>List/Unlist</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% brand.forEach(brand => { %>
                <tr>
                  <td><%= brand.name %></td>
                  <td><%= brand.description %></td>
                  <td>
                    <% if (brand.isListed) { %>
                      <form action="/admin/unListBrand/<%= brand._id %>" method="post" class="confirm-form">
                        <button type="button" class="btn btn-unlist confirm-action">Unlist</button>
                      </form>
                    <% } else { %>
                      <form action="/admin/listBrand/<%= brand._id %>" method="post" class="confirm-form">
                        <button type="button" class="btn btn-list confirm-action">List</button>
                      </form>
                    <% } %>
                  </td>
                  
                  <td>
                    <a href="/admin/editBrand/<%= brand._id %>" class="btn btn-edit">Edit</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

   
    <%- include('pagination.ejs', {
      currentPage: currentPage,
      totalPages: totalPages,
      itemsPerPage: itemsPerPage
    }) %>
    
    <a href="/admin/addBrand" class="btn btn-add">Add Brand</a>
  </section>

  <footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
      <div class="col-sm-6">
        <script>
          document.write(new Date().getFullYear());
        </script>
      </div>
      <div class="col-sm-6">
        <div class="text-sm-end">All rights reserved</div>
      </div>
    </div>
  </footer>
</main>

<script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
<script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
<script src="/assets/js/vendors/select2.min.js"></script>
<script src="/assets/js/vendors/perfect-scrollbar.js"></script>
<script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
<script src="/assets/js/main.js" type="text/javascript"></script>



    <script>
      function changeColor(selectElement) {
        if (selectElement.value === "list") {
          selectElement.style.color = "#4CAF50";
        } else if (selectElement.value === "unlist") {
          selectElement.style.color = "red";
        }
      }

      window.onload = function () {
        const selectElement = document.getElementById("statusSelect");
        changeColor(selectElement);
      };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".confirm-action");

    buttons.forEach((button) => {
      button.addEventListener("click", function () {
        const form = this.closest(".confirm-form");
        const isUnlist = this.classList.contains("btn-unlist");
        const actionText = isUnlist ? "unlist" : "list";

        Swal.fire({
          title: `Are you sure you want to ${actionText} this brand?`,
          text: `This action will ${actionText} the brand.`,
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: isUnlist ? "red" : "#088178",
          cancelButtonColor: "#000",
          confirmButtonText: `Yes, ${actionText} it!`,
          cancelButtonText: "No, cancel",
        }).then((result) => {
          if (result.isConfirmed) {
            // Send request to server
            fetch(form.action, {
              method: form.method,
            })
              .then((response) => {
                if (response.ok) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: `Brand ${actionText}ed successfully.`,
                    confirmButtonColor: "#088178",
                  }).then(() => {
                    window.location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: `Failed to ${actionText} the brand. Please try again.`,
                    confirmButtonColor: "red",
                  });
                }
              })
              .catch(() => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: "An unexpected error occurred. Please try again.",
                  confirmButtonColor: "red",
                });
              });
          }
        });
      });
    });
  });
</script>


