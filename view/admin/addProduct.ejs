<style>
  /* Basic Reset */
  * {
    box-sizing: border-box;
  }

  form {
    max-width: 800px;
    margin: auto;
  }

  /* Style for labels */
  .form-label {
    font-weight: bold;
  }

  /* Style for input fields and selects */
  .form-control,
  .form-select {
    width: 100%;
    padding: 10px;
    font-size: 1.1rem;
  }

  /* Style for textarea */
  textarea.form-control {
    resize: vertical;
  }

  /* Style for buttons */
  .btn {
    padding: 10px 20px;
    font-size: 1.1rem;
  }

  /* Ensure rows are well spaced */
  .row {
    margin-bottom: 20px;
  }

  /* Text danger color */
  .text-danger {
    font-size: 0.9rem;
  }

  /* Card styles */
  .card {
    margin-bottom: 20px;
  }

  /* Input upload styles */
  .input-upload {
    position: relative;
  }

  /* General styling */
  body {
    font-family: Arial, sans-serif;
    background-color: #ffffff;
  }

  .card-body {
    max-width: 500px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
  }

  /* Crop modal styling */
  #cropModal {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: white;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    z-index: 10;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  }

  #croppingImage {
    max-width: 100%;
  }

  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 5;
  }

  /* Styling for the table */
  table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #ddd;
  }

  table,
  th,
  td {
    border: 1px solid #ddd;
  }

  th,
  td {
    padding: 12px;
    text-align: left;
  }

  th {
    background-color: #f8f9fa;
    font-weight: bold;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  /* Styling for the title */
  h2.content-title {
    font-size: 24px;
    font-weight: bold;
  }

  #cropModal {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 20px;
    z-index: 10000;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  #croppingImage {
    max-width: 100%;
    display: block;
  }

  #cropButton {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 10px;
  }

  #cropButton:hover {
    background-color: #0056b3;
  }

  #imagePreview img {
    width: 100px;
    margin-right: 10px;
    cursor: pointer;
  }

  /* Responsive styles */
  @media (max-width: 1200px) {
    .card {
      width: 100% !important;
    }
  }

  @media (max-width: 992px) {
    .col-9 {
      width: 100%;
    }
    .col-lg-6 {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .content-header {
      flex-direction: column;
      align-items: flex-start;
    }
    .content-header > div {
      margin-top: 1rem;
    }
    .form-control,
    .form-select {
      font-size: 1rem;
    }
    .btn {
      width: 100%;
      margin-bottom: 0.5rem;
    }
  }

  @media (max-width: 576px) {
    .card-header h4 {
      font-size: 1.2rem;
    }
    .form-label {
      font-size: 0.9rem;
    }
    #imagePreview img {
      width: 80px;
    }
  }
</style>
