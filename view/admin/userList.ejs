<%- include('headers.ejs') %>
    <style>
      /* Styling for the table */
      table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
      }
      table,
      th,
      td {
        border: 1px solid #ddd;
      }
      th,
      td {
        padding: 12px;
        text-align: left;
      }
      th {
        background-color: #f8f9fa;
        font-weight: bold;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      /* Styling for the title */
      h2.content-title {
        font-size: 24px;
        font-weight: bold;
      }
    </style>
 
    <main class="main-wrap">
      <header style="background-color: #ffffff;" class="main-header navbar">
        <div class="col-search">
        </div>
        <div class="col-nav">
            <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                    class="material-icons md-apps"></i> </button>
            <a class="dropdown-item text-danger" href="/admin/logout"><i
                    class="material-icons md-exit_to_app"></i>Logout</a>
        </div>
    </header>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">User'S</h2>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search products"
              class="form-control bg-white"
            />
          </div>
        </div>
        <div class="card">
          <div class="card-body" style="width: 1100px">
            <div class="row">
              <div class="col-md-9">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Number</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% user.forEach(userModel => { %>
                      <tr>
                        <td><%= userModel.name %></td>
                        <td><%= userModel.email %></td>
                        <td><%= userModel.number %></td>
                        <td>
                          <% if (userModel.isBlocked) { %>
                          <h6 style="color: red">Blocked</h6>
                          <% } else { %>
                          <h6 style="color: #088178">UnBlocked</h6>
                          <% } %>
                        </td>
                        <td>
                          <% if (userModel.isBlocked) { %>
                          <form
                            action="/admin/UnblockUser/<%= userModel._id %>"
                            method="post"
                          >
                            <button
                              type="submit"
                              style="
                                background-color: #088178;
                                color: white;
                                width: 70px;
                                border-color: #088178;
                              "
                            >
                              UnBlock
                            </button>
                          </form>
                          <% } else { %>
                          <form
                            action="/admin/blockUser/<%= userModel._id %>"
                            method="post"
                          >
                            <button
                              type="submit"
                              style="
                                background-color: red;
                                color: white;
                                width: 70px;
                                border-color: red;
                              "
                            >
                              Block
                            </button>
                          </form>
                          <% } %>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-start">
                    <% if (currentPage > 1) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=4">
                          <i class="material-icons md-chevron_left"></i>
                        </a>
                      </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=4"><%= i %></a>
                      </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=4">
                          <i class="material-icons md-chevron_right"></i>
                        </a>
                      </li>
                    <% } %>
                  </ul>
                </nav>
              </div>
              
              
            </div>
          </div>
        </div>

        <!-- card .// -->
      </section>
      <!-- content-main end// -->

      <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
          <div class="col-sm-6">
            <script>
              document.write(new Date().getFullYear());
            </script>
          </div>
          <div class="col-sm-6">
            <div class="text-sm-end">All rights reserved</div>
          </div>
        </div>
      </footer>
    </main>

